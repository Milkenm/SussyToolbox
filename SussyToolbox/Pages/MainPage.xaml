			<Grid>
				<CheckBox x:Name="checkBox_lockTaskbarSearch" Content="Lock State" HorizontalAlignment="Left" Margin="46,25,0,0" VerticalAlignment="Top"/>
				<ComboBox x:Name="comboBox_taskbarState" HorizontalAlignment="Center" VerticalAlignment="Center" Width="136"/>
			</Grid>
		</GroupBox>
		<ComboBox x:Name="comboBox_wallpaperStyle" HorizontalAlignment="Left" Margin="130,19,0,0" VerticalAlignment="Top" Width="120"/>
	</Grid>
</Page>
